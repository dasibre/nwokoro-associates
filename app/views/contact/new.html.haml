    / col67
    .col67
      .col-holder
        / post-box
        <article class="post-box">
        = form_for @message, :url => contact_path, :html => { class: "comment-form", id: "cont_form"} do |f|
          %fieldset
          .meta
            %h3 Contact Us
          .row
            = f.label :name, "Your Name"
            %span.text
              = f.text_field :name, placeholder: "required"
          .row
            = f.label :email, "Email"
            %span.text
              = f.text_field :email, placeholder: "required"
          .row
            = f.label :subject, "Subject"
            %span.text
              = f.text_field :subject
          .row
            = f.label :body, "Message"
            %span.text
              = f.text_area :body, placeholder: "required"
          .row
            %span.submit
              Send Email
              = f.submit "Send Message"
