<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag "application.css", :media => "all" %>

  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body class="inner">
<div id="wrapper">
	<div class="w2">
		<header id="header">
			<div class="section">
				<h1 class="logo"><%= link_to "N&A", '/' %></h1>
				<div class="contact-box">
							<strong class="phone">(212) 785-1060</strong>	
						</div>
			</div>
			<nav class="nav-box">
			<%= render 'layouts/nav' %>
			</nav>
			<%= render 'layouts/header' %>
		</header>							
</div>
	</div>
</div>

<%= yield %>
<div class="divider">							
</div>
<%= render 'layouts/footer' %>
</body>
</html>
