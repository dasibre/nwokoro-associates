- provide(:title, "Attorneys")
#main
  .main-container.holder
    .heading
      %center
        %h1 N&A ATTORNEYS
    / grid-cols
    .grid-cols
      / col50
      - @attorneys.each do |attorney|
        .col50
          .col-holder
            = image_tag(attorney.avatar.url(:thumb), class: "image alignleft")
            %h5= link_to "#{attorney.full_name}", attorney_path(attorney)
            - if attorney.profile.length > 250
              = truncate(attorney.profile, :length => 230)
              = link_to 'Read more', attorney_path(attorney)
            - else
              = attorney.profile
